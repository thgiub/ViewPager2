<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_album"
        android:layout_width="0dp"
        android:src="@drawable/diaz"
        android:layout_height="50dp"
        android:layout_weight="1" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_text_music"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="5">
        <TextView
            android:id="@+id/tv_music_name_list"
            android:layout_width="0dp"
            android:text="Прыгай на мой хуй"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_artist_name_list"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/tv_artist_name_list"
            android:layout_width="0dp"
            android:text="Diazzers"
            app:layout_constraintTop_toBottomOf="@+id/tv_music_name_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
           />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageView
        android:id="@+id/iv_star_list"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_star"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="3:12"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/iv_item_music_settings"
        android:layout_width="0dp"
        android:src="@drawable/ic_three_point"
        android:layout_height="50dp"
        android:layout_weight="1" />

</LinearLayout>